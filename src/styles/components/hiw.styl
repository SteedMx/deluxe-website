.hiw
  background-color #F3F3F9
  display block
  margin 0 auto
  padding 2rem 0

  &__container
    display block
    margin 0 auto
    padding 0
    width 1200px

  &__header
    align-content center
    align-items center
    display flex
    justify-content space-between

  &__separator
    background-color $primary-purple
    display block
    height 2px
    width 38%

  &__title
    color rgb(40, 40, 40)
    font-family 'Cookie'
    font-size 3rem
    font-weight normal
    margin 0
    text-align center

  &__steps
    display flex
    justify-content space-around
    margin 3rem auto 0 auto
    padding 0

  &__step
    display inline-block
    margin 0
    padding 0

    &Image
      display block
      height 175px
      margin 0 auto
      text-align center

    &Description
      color rgb(40, 40, 40)
      font-size 1.5rem
      margin 1rem auto
      text-align center

  @media all and (min-width 200px) and (max-width 500px)
    &__container
      margin 0 auto
      padding 0
      width 100%

    &__title
      font-size 2.5rem
      margin 0 auto 2rem auto
      text-align center

    &__separator
      display none

    &__steps
      display block
      margin 0
      padding 0
      width 100%

    &__step
      display block

      &Description
        font-size 1rem

      &Image
        height 100px
        width auto

  @media all and (min-width 501px) and (max-width 1200px)
    &__container
      box-sizing border-box
      margin 0 auto
      padding 0 1rem
      width 100%

    &__separator
      width 30%

    &__step
      &Image
        height 80px
