$primary-purple = #523D7B

body
  font-family 'Lato'
  font-size 16px
  margin 0
  padding 0


.hero
  background-image url(../images/splash.png)
  background-position top
  background-size: cover;
  min-height 100vh
  margin 0
  padding 2rem 0

  &__iphone
    display block
    margin 0 auto
    width 500px

  &__box
    display block
    margin 0 auto
    padding 0
    text-align center

  &__download
    border 3px solid white
    color white
    display inline-block
    font-weight bold
    margin 0 auto
    padding 1rem
    text-align center
    text-decoration none

    &:hover
      background-color white
      color $primary-purple

.navigation
  align-content center
  align-items center
  display flex
  justify-content space-around
  margin 0 auto
  padding 0
  width 1200px

  &__image
    margin 0
    width 250px

  &__link
    border-bottom 2px solid transparent
    color white
    font-size 1.25rem
    margin 0
    text-decoration none
    text-transform uppercase

    &:nth-child(3):hover
      border-bottom 2px solid transparent

    &:nth-child(4)
    &:last-child
      margin-left 3rem

    &:hover
      border-bottom 2px solid white

.hiw
  background-color #F3F3F9
  display block
  margin 0 auto
  padding 2rem 0

  &__container
    display block
    margin 0 auto
    padding 0
    width 1200px

  &__header
    align-content center
    align-items center
    display flex
    justify-content space-between

  &__separator
    background-color $primary-purple
    display block
    height 2px
    width 38%

  &__title
    color rgb(40, 40, 40)
    font-family 'Cookie'
    font-size 3rem
    font-weight normal
    margin 0
    text-align center

  &__steps
    display flex
    justify-content space-around
    margin 3rem auto 0 auto
    padding 0

  &__step
    display inline-block
    margin 0
    padding 0

    &Image
      display block
      height 175px
      margin 0 auto
      text-align center

    &Description
      color rgb(40, 40, 40)
      font-size 1.5rem
      margin 1rem auto
      text-align center

