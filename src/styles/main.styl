body
  font-family 'Lato'
  font-size 16px
  margin 0
  padding 0

.deluxe
  &-hero
    background-image url(../images/splash.png)
    background-position top
    background-size: cover;
    height 100vh
    margin 0
    padding 0

  &-navigation
    align-content center
    align-items center
    display flex
    justify-content space-around
    margin 0 auto
    padding 2rem 0 0 0
    width 1200px

    &__image
      margin 0
      width 250px

    &__link
      color white
      font-size 1.25rem
      margin 0
      text-transform uppercase

      &:nth-child(4)
      &:last-child
        margin-left 3rem
