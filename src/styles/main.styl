body
  font-family 'Lato'
  font-size 16px
  margin 0
  padding 0

.deluxe
  &-hero
    background-image url(../images/splash.png)
    background-position top
    background-size: cover;
    min-height 100vh
    margin 0
    padding 2rem 0

    &__iphone
      display block
      margin 0 auto
      width 500px

    &__box
      display block
      margin 0 auto
      padding 0
      text-align center

    &__download
      border 3px solid white
      color white
      display inline-block
      font-weight bold
      margin 0 auto
      padding 1rem
      text-align center
      text-decoration none

      &:hover
        background-color white
        color #523D7B

  &-navigation
    align-content center
    align-items center
    display flex
    justify-content space-around
    margin 0 auto
    padding 0
    width 1200px

    &__image
      margin 0
      width 250px

    &__link
      border-bottom 2px solid transparent
      color white
      font-size 1.25rem
      margin 0
      text-decoration none
      text-transform uppercase

      &:nth-child(3):hover
        border-bottom 2px solid transparent

      &:nth-child(4)
      &:last-child
        margin-left 3rem

      &:hover
        border-bottom 2px solid white
